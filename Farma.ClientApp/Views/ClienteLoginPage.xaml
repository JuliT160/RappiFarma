<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:farmaClientApp.ViewModels"
             x:Class="farmaClientApp.Views.ClienteLoginPage"
             x:DataType="viewmodels:ClienteLoginViewModel"
             BackgroundColor="{StaticResource Secondary}"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <viewmodels:ClienteLoginViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid>
            <!-- Fondo con gradiente -->
            <BoxView>
                <BoxView.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                        <GradientStop Color="{StaticResource PrimaryLight}" Offset="0.5" />
                        <GradientStop Color="{StaticResource Tertiary}" Offset="1.0" />
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>

            <!-- Contenido principal -->
            <VerticalStackLayout Spacing="0" VerticalOptions="Center" Padding="40,60">
                
                <!-- Logo y título -->
                <VerticalStackLayout Spacing="16" Margin="0,0,0,50">
                    <!-- Icono de farmacia -->
                    <Border BackgroundColor="{StaticResource White}" 
                            StrokeShape="RoundRectangle 35"
                            StrokeThickness="0"
                            HeightRequest="70" 
                            WidthRequest="70" 
                            HorizontalOptions="Center">
                        <Border.Shadow>
                            <Shadow Brush="{StaticResource Gray300}" Offset="0,4" Radius="12" Opacity="0.3"/>
                        </Border.Shadow>
                         <Label Text="🛵" 
                                FontSize="35" 
                                HorizontalOptions="Center" 
                                VerticalOptions="Center" />
                     </Border>
                    
                    <Label Text="RappiFarma" 
                           FontFamily="OpenSansSemibold"
                           FontSize="32" 
                           TextColor="{StaticResource White}" 
                           HorizontalOptions="Center" />
                    
                    <Label Text="Tu farmacia a domicilio" 
                           FontFamily="OpenSansRegular"
                           FontSize="16" 
                           TextColor="{StaticResource White}" 
                           HorizontalOptions="Center"
                           Opacity="0.9" />
                </VerticalStackLayout>

                <!-- Formulario de login -->
                <Border BackgroundColor="{StaticResource White}"
                        StrokeShape="RoundRectangle 20"
                        StrokeThickness="0"
                        Margin="0,0,0,30"
                        Padding="30,35">
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource Gray400}" Offset="0,8" Radius="20" Opacity="0.15"/>
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="25">

                        <!-- Botón Google Sign-In (Futuro) -->
                        <Button Text="🔐 Continuar con Google"
                                Command="{Binding GoogleLoginCommand}"
                                BackgroundColor="{StaticResource White}"
                                TextColor="{StaticResource Gray700}"
                                BorderColor="{StaticResource Gray300}"
                                BorderWidth="1"
                                FontFamily="OpenSansSemibold"
                                FontSize="16"
                                CornerRadius="12"
                                HeightRequest="52"
                                Margin="0,0,0,10">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Gray300}" Offset="0,2" Radius="8" Opacity="0.2"/>
                            </Button.Shadow>
                        </Button>

                        <!-- Separador -->
                        <Grid ColumnDefinitions="*,Auto,*" Margin="0,5,0,15">
                            <BoxView Grid.Column="0" 
                                     BackgroundColor="{StaticResource Gray300}" 
                                     HeightRequest="1" 
                                     VerticalOptions="Center" />
                            <Label Grid.Column="1" 
                                   Text="o continúa con email" 
                                   FontSize="12" 
                                   TextColor="{StaticResource Gray500}"
                                   Margin="15,0" />
                            <BoxView Grid.Column="2" 
                                     BackgroundColor="{StaticResource Gray300}" 
                                     HeightRequest="1" 
                                     VerticalOptions="Center" />
                        </Grid>

                        <!-- Email -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Email"
                                   FontFamily="OpenSansSemibold"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray700}" />
                            <Border Stroke="{StaticResource Gray300}"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 12">
                                <Entry Text="{Binding Email}"
                                       Placeholder="tu@email.com"
                                       Keyboard="Email"
                                       BackgroundColor="Transparent"
                                       FontSize="16" />
                            </Border>
                        </VerticalStackLayout>

                        <!-- Contraseña -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Contraseña"
                                   FontFamily="OpenSansSemibold"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray700}" />
                            <Border Stroke="{StaticResource Gray300}"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 12">
                                <Entry Text="{Binding Password}"
                                       Placeholder="Ingrese su contraseña"
                                       IsPassword="True"
                                       BackgroundColor="Transparent"
                                       FontSize="16" />
                            </Border>
                        </VerticalStackLayout>

                        <!-- Recordar y Olvidé contraseña -->
                        <Grid ColumnDefinitions="*,Auto">
                            <HorizontalStackLayout Grid.Column="0" Spacing="8">
                                <CheckBox IsChecked="{Binding RememberMe}" 
                                          Color="{StaticResource Primary}" />
                                <Label Text="Recordarme" 
                                       FontSize="14" 
                                       TextColor="{StaticResource Gray600}"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            
                            <Button Grid.Column="1"
                                    Text="¿Olvidaste tu contraseña?"
                                    Command="{Binding ForgotPasswordCommand}"
                                    BackgroundColor="Transparent"
                                    TextColor="{StaticResource Primary}"
                                    FontSize="12"
                                    Padding="0" />
                        </Grid>

                        <!-- Mensaje de error -->
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="{StaticResource ErrorRed}"
                               FontSize="14"
                               HorizontalOptions="Center"
                               IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}" />

                        <!-- Botón de login -->
                        <Button Text="Iniciar Sesión"
                                Command="{Binding LoginCommand}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="{StaticResource White}"
                                FontFamily="OpenSansSemibold"
                                FontSize="16"
                                CornerRadius="12"
                                HeightRequest="52"
                                Margin="0,10,0,0">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}" Offset="0,4" Radius="12" Opacity="0.3"/>
                            </Button.Shadow>
                        </Button>

                        <!-- Indicador de carga -->
                        <ActivityIndicator IsVisible="{Binding IsLoading}"
                                           IsRunning="{Binding IsLoading}"
                                           Color="{StaticResource Primary}"
                                           HeightRequest="30" />

                    </VerticalStackLayout>
                </Border>

                <!-- Registro -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                    <Label Text="¿No tienes cuenta?" 
                           FontSize="14" 
                           TextColor="{StaticResource White}" 
                           Opacity="0.9" />
                    <Button Text="Regístrate aquí"
                            Command="{Binding RegisterCommand}"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource White}"
                            FontFamily="OpenSansSemibold"
                            FontSize="14"
                            Padding="0" />
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>

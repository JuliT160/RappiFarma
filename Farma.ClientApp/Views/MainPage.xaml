<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:farmaClientApp.ViewModels"
             x:Class="farmaClientApp.Views.MainPage"
             x:DataType="viewmodels:MainPageViewModel"
             Title="RapiFarma">

    <ContentPage.BindingContext>
        <viewmodels:MainPageViewModel />
    </ContentPage.BindingContext>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="☰" Command="{Binding MenuCommand}" />
    </ContentPage.ToolbarItems>

    <ScrollView BackgroundColor="{StaticResource Secondary}">
        <VerticalStackLayout Spacing="0">
            
            <!-- Header con saludo -->
            <Border BackgroundColor="{StaticResource Primary}"
                    StrokeThickness="0"
                    Padding="20,40,20,30">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                        <GradientStop Color="{StaticResource PrimaryLight}" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                
                <VerticalStackLayout Spacing="8">
                    <Label Text="{Binding SaludoTexto}"
                           FontFamily="OpenSansSemibold"
                           FontSize="24"
                           TextColor="{StaticResource White}" />
                    
                    <Label Text="¿Necesitas medicamentos?"
                           FontFamily="OpenSansRegular"
                           FontSize="16"
                           TextColor="{StaticResource White}"
                           Opacity="0.9" />
                </VerticalStackLayout>
            </Border>

            <!-- Contenido principal -->
            <VerticalStackLayout Padding="20" Spacing="25">

                <!-- Botón principal "Nuevo Pedido" -->
                <Border BackgroundColor="{StaticResource White}"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 20"
                        Padding="30,40"
                        Margin="0,10,0,0">
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource Gray400}" Offset="0,8" Radius="20" Opacity="0.15"/>
                    </Border.Shadow>
                    
                    <VerticalStackLayout Spacing="20" HorizontalOptions="Center">
                        <!-- Icono grande -->
                        <Border BackgroundColor="{StaticResource Primary}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 40"
                                WidthRequest="80"
                                HeightRequest="80"
                                HorizontalOptions="Center">
                            <Border.Shadow>
                                <Shadow Brush="{StaticResource Primary}" Offset="0,4" Radius="15" Opacity="0.3"/>
                            </Border.Shadow>
                            <Label Text="🛵"
                                   FontSize="40"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        
                        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                            <Label Text="Nuevo Pedido"
                                   FontFamily="OpenSansSemibold"
                                   FontSize="22"
                                   TextColor="{StaticResource Gray900}"
                                   HorizontalOptions="Center" />
                            
                            <Label Text="Sube tu receta y te llevamos los medicamentos a tu casa"
                                   FontFamily="OpenSansRegular"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray600}"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                        
                        <Button Text="🛵 Pedir Ahora"
                                Command="{Binding NuevoPedidoCommand}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="{StaticResource White}"
                                FontFamily="OpenSansSemibold"
                                FontSize="18"
                                CornerRadius="15"
                                HeightRequest="55"
                                WidthRequest="200"
                                HorizontalOptions="Center">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}" Offset="0,4" Radius="12" Opacity="0.3"/>
                            </Button.Shadow>
                        </Button>
                    </VerticalStackLayout>
                </Border>

                <!-- Acciones rápidas -->
                <VerticalStackLayout Spacing="15">
                    <Label Text="Acciones Rápidas"
                           FontFamily="OpenSansSemibold"
                           FontSize="18"
                           TextColor="{StaticResource Gray800}"
                           Margin="0,10,0,0" />
                    
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="15" RowSpacing="15">
                        
                        <!-- Mis Pedidos -->
                        <Border Grid.Column="0" Grid.Row="0"
                                BackgroundColor="{StaticResource White}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 15"
                                Padding="20,25">
                            <Border.Shadow>
                                <Shadow Brush="{StaticResource Gray300}" Offset="0,4" Radius="12" Opacity="0.1"/>
                            </Border.Shadow>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding VerPedidosCommand}" />
                            </Border.GestureRecognizers>
                            
                            <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                                <Label Text="📦"
                                       FontSize="32"
                                       HorizontalOptions="Center" />
                                
                                <Label Text="Mis Pedidos"
                                       FontFamily="OpenSansSemibold"
                                       FontSize="14"
                                       TextColor="{StaticResource Gray800}"
                                       HorizontalOptions="Center" />
                                
                                <Border BackgroundColor="{StaticResource Primary}"
                                        StrokeThickness="0"
                                        StrokeShape="RoundRectangle 10"
                                        Padding="8,4"
                                        IsVisible="{Binding TienePedidosPendientes}">
                                    <Label Text="{Binding PedidosPendientes}"
                                           FontFamily="OpenSansSemibold"
                                           FontSize="12"
                                           TextColor="{StaticResource White}"
                                           HorizontalOptions="Center" />
                                </Border>
                            </VerticalStackLayout>
                        </Border>
                        
                        <!-- Configurar Perfil -->
                        <Border Grid.Column="1" Grid.Row="0"
                                BackgroundColor="{StaticResource White}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 15"
                                Padding="20,25">
                            <Border.Shadow>
                                <Shadow Brush="{StaticResource Gray300}" Offset="0,4" Radius="12" Opacity="0.1"/>
                            </Border.Shadow>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ConfigurarPerfilCommand}" />
                            </Border.GestureRecognizers>
                            
                            <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                                <Label Text="👤"
                                       FontSize="32"
                                       HorizontalOptions="Center" />
                                
                                <Label Text="Mi Perfil"
                                       FontFamily="OpenSansSemibold"
                                       FontSize="14"
                                       TextColor="{StaticResource Gray800}"
                                       HorizontalOptions="Center" />
                                
                                <Label Text="Configurar"
                                       FontFamily="OpenSansRegular"
                                       FontSize="12"
                                       TextColor="{StaticResource Gray600}"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Border>
                    </Grid>
                </VerticalStackLayout>

                <!-- Información importante -->
                <Border BackgroundColor="{StaticResource MedicalBlue}"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 15"
                        Padding="20,18"
                        Margin="0,10,0,0">
                    <HorizontalStackLayout Spacing="15">
                        <Label Text="ℹ️"
                               FontSize="24"
                               VerticalOptions="Center" />
                        
                        <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                            <Label Text="Recordatorio Importante"
                                   FontFamily="OpenSansSemibold"
                                   FontSize="14"
                                   TextColor="{StaticResource White}" />
                            
                            <Label Text="Debes entregar la receta física al recibir el medicamento"
                                   FontFamily="OpenSansRegular"
                                   FontSize="12"
                                   TextColor="{StaticResource White}"
                                   Opacity="0.9" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Border>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:farmaClientApp.ViewModels"
             x:Class="farmaClientApp.Views.NuevoPedidoPage"
             x:DataType="viewmodels:NuevoPedidoViewModel"
             Title="Nuevo Pedido"
             BackgroundColor="{StaticResource Secondary}">

    <ContentPage.BindingContext>
        <viewmodels:NuevoPedidoViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="0">
            
            <!-- Header -->
            <Border BackgroundColor="{StaticResource Primary}"
                    StrokeThickness="0"
                    Padding="20,30,20,25">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Sube tu Receta"
                           FontFamily="OpenSansSemibold"
                           FontSize="24"
                           TextColor="{StaticResource White}" />
                    
                    <Label Text="Toma una foto clara de tu receta médica"
                           FontFamily="OpenSansRegular"
                           FontSize="14"
                           TextColor="{StaticResource White}"
                           Opacity="0.9" />
                </VerticalStackLayout>
            </Border>

            <!-- Contenido -->
            <VerticalStackLayout Padding="20" Spacing="25">

                <!-- Sección de fotos -->
                <VerticalStackLayout Spacing="15">
                    <Label Text="Recetas Médicas"
                           FontFamily="OpenSansSemibold"
                           FontSize="18"
                           TextColor="{StaticResource Gray800}" />

                    <!-- Botones para agregar fotos -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                        <Button Grid.Column="0"
                                Text="📷 Tomar Foto"
                                Command="{Binding TomarFotoCommand}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="{StaticResource White}"
                                FontFamily="OpenSansSemibold"
                                FontSize="14"
                                CornerRadius="12"
                                HeightRequest="50" />
                        
                        <Button Grid.Column="1"
                                Text="🖼️ Seleccionar"
                                Command="{Binding SeleccionarFotoCommand}"
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Primary}"
                                BorderColor="{StaticResource Primary}"
                                BorderWidth="2"
                                FontFamily="OpenSansSemibold"
                                FontSize="14"
                                CornerRadius="12"
                                HeightRequest="50" />
                    </Grid>

                    <!-- Lista de fotos -->
                    <CollectionView ItemsSource="{Binding FotosRecetas}"
                                    IsVisible="{Binding TieneFotos}"
                                    BackgroundColor="Transparent">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border BackgroundColor="{StaticResource White}"
                                        StrokeThickness="1"
                                        Stroke="{StaticResource Gray200}"
                                        StrokeShape="RoundRectangle 12"
                                        Padding="15"
                                        Margin="0,5">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <Label Grid.Column="0"
                                               Text="📄"
                                               FontSize="24"
                                               VerticalOptions="Center" />
                                        
                                        <VerticalStackLayout Grid.Column="1" 
                                                             Spacing="4" 
                                                             Margin="15,0">
                                            <Label Text="Receta médica"
                                                   FontFamily="OpenSansSemibold"
                                                   FontSize="14"
                                                   TextColor="{StaticResource Gray800}" />
                                            <Label Text="Imagen capturada"
                                                   FontSize="12"
                                                   TextColor="{StaticResource Gray600}" />
                                        </VerticalStackLayout>
                                        
                                        <Button Grid.Column="2"
                                                Text="🗑️"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:NuevoPedidoViewModel}}, Path=EliminarFotoCommand}"
                                                CommandParameter="{Binding}"
                                                BackgroundColor="Transparent"
                                                TextColor="{StaticResource ErrorRed}"
                                                FontSize="18"
                                                Padding="8" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Estado sin fotos -->
                    <Border BackgroundColor="{StaticResource Gray100}"
                            StrokeThickness="2"
                            Stroke="{StaticResource Gray300}"
                            StrokeShape="RoundRectangle 15"
                            Padding="30,40"
                            IsVisible="{Binding TieneFotos, Converter={StaticResource InvertedBoolConverter}}">
                        <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                            <Label Text="📷"
                                   FontSize="48"
                                   HorizontalOptions="Center"
                                   Opacity="0.5" />
                            
                            <Label Text="No hay recetas agregadas"
                                   FontFamily="OpenSansSemibold"
                                   FontSize="16"
                                   TextColor="{StaticResource Gray600}"
                                   HorizontalOptions="Center" />
                            
                            <Label Text="Toma una foto o selecciona una imagen de tu galería"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray500}"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>

                <!-- Observaciones -->
                <VerticalStackLayout Spacing="12">
                    <Label Text="Observaciones (Opcional)"
                           FontFamily="OpenSansSemibold"
                           FontSize="18"
                           TextColor="{StaticResource Gray800}" />
                    
                    <Border BackgroundColor="{StaticResource White}"
                            StrokeThickness="1"
                            Stroke="{StaticResource Gray300}"
                            StrokeShape="RoundRectangle 12"
                            Padding="15">
                        <Editor Text="{Binding Observaciones}"
                                Placeholder="Ej: Necesito el genérico, soy alérgico a..."
                                BackgroundColor="Transparent"
                                FontSize="14"
                                MinimumHeightRequest="80" />
                    </Border>
                </VerticalStackLayout>

                <!-- Consentimiento Legal -->
                <Border BackgroundColor="{StaticResource WarningAmber}"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 12"
                        Padding="20,15"
                        IsVisible="{Binding TieneFotos}">
                    <VerticalStackLayout Spacing="15">
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="⚖️"
                                   FontSize="20"
                                   VerticalOptions="Center" />
                            
                            <Label Text="Consentimiento Legal Requerido"
                                   FontFamily="OpenSansSemibold"
                                   FontSize="16"
                                   TextColor="{StaticResource White}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                        
                        <Label Text="Al confirmar este pedido, declaro bajo juramento que:"
                               FontFamily="OpenSansRegular"
                               FontSize="14"
                               TextColor="{StaticResource White}" />
                        
                        <VerticalStackLayout Spacing="8" Margin="15,0,0,0">
                            <Label Text="• Entregaré la receta física original al recibir el medicamento"
                                   FontSize="13"
                                   TextColor="{StaticResource White}" />
                            <Label Text="• La receta es auténtica y fue prescrita por un médico autorizado"
                                   FontSize="13"
                                   TextColor="{StaticResource White}" />
                            <Label Text="• Soy responsable del uso correcto del medicamento"
                                   FontSize="13"
                                   TextColor="{StaticResource White}" />
                        </VerticalStackLayout>
                        
                        <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                            <CheckBox IsChecked="{Binding ConsentimientoAceptado}"
                                      Color="{StaticResource White}" />
                            <Label Text="Acepto los términos y condiciones"
                                   FontFamily="OpenSansSemibold"
                                   FontSize="14"
                                   TextColor="{StaticResource White}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Botón enviar -->
                <Button Text="Enviar Pedido"
                        Command="{Binding EnviarPedidoCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="{StaticResource White}"
                        FontFamily="OpenSansSemibold"
                        FontSize="18"
                        CornerRadius="15"
                        HeightRequest="55"
                        Margin="0,20,0,0"
                        IsVisible="{Binding TieneFotos}">
                    <Button.Shadow>
                        <Shadow Brush="{StaticResource Primary}" Offset="0,4" Radius="12" Opacity="0.3"/>
                    </Button.Shadow>
                </Button>

                <!-- Indicador de carga -->
                <ActivityIndicator IsVisible="{Binding IsLoading}"
                                   IsRunning="{Binding IsLoading}"
                                   Color="{StaticResource Primary}"
                                   HeightRequest="40"
                                   Margin="0,20,0,0" />

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

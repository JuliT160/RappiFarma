<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="farmaClientApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:farmaClientApp.Views"
    Title="RappiFarma"
    FlyoutBehavior="Disabled">

    <!-- Login Page (inicial) -->
    <ShellContent
        Shell.FlyoutBehavior="Disabled"
        ContentTemplate="{DataTemplate views:ClienteLoginPage}" />

    <!-- Main App con Tabs -->
    <TabBar Route="main">
        <Tab Title="Inicio" Icon="home.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>
        <Tab Title="Mis Pedidos" Icon="package.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:MisPedidosPage}" />
        </Tab>
    </TabBar>

</Shell>

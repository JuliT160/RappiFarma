<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:farmaClientApp"
             xmlns:converters="clr-namespace:farmaClientApp.Converters"
             x:Class="farmaClientApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Convertidores globales -->
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:EstadoToTextConverter x:Key="EstadoToTextConverter" />
            <converters:EstadoToColorConverter x:Key="EstadoToColorConverter" />
            <converters:EstadoToIconConverter x:Key="EstadoToIconConverter" />
            <converters:EstadoToProgressConverter x:Key="EstadoToProgressConverter" />
            <converters:EstadoIsActiveConverter x:Key="EstadoIsActiveConverter" />
            <converters:EstadoCanCancelConverter x:Key="EstadoCanCancelConverter" />
            <converters:CountToBoolConverter x:Key="CountToBoolConverter" />
            <converters:PluralConverter x:Key="PluralConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
